<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RollDice"
    android:orientation="vertical"
    android:padding="15dp">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp" >



        <ImageView
            android:id="@+id/dice1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/dice2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/dice3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


    </LinearLayout>

    <TextView
        android:id="@+id/textPotTotal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:text="Winning Pot: $0"
        android:textSize="24dp"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textPlayer1Money"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="balance $50"
                android:textSize="24dp"/>


            <TextView
                android:id="@+id/textPlayer1Score"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="score 0"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/buttonKeepScorePlayer1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Keep Score"
                android:textSize="22dp"
                />

            <EditText
                android:id="@+id/editBetPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="enter bet"
                android:textSize="22dp"/>

            <Button
                android:id="@+id/buttonConfirmBetPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Confirm Bet"
                android:textSize="22dp"/>

            <Button
                android:id="@+id/buttonRollPlayer1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="RollPlayer1"
                android:textSize="22dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/textPlayer2Money"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="balance $50"
                android:textSize="24dp"/>

            <TextView
                android:id="@+id/textPlayer2Score"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="scores 0"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/buttonKeepScorePlayer2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Keep Score"
                android:textSize="22dp"/>

            <EditText
                android:id="@+id/editBetPlayer2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="enter bet"
                android:textSize="22dp"/>

            <Button
                android:id="@+id/buttonConfirmBetPlayer2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Confirm Bet"
                android:textSize="22dp"/>

            <Button
                android:id="@+id/buttonRollPlayer2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="RollPlayer2"
                android:textSize="22dp"/>


        </LinearLayout>




    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:padding="20dp">

        <TextView
            android:id="@+id/textGameStatus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.8"

            android:text="game status"
            android:textSize="22dp"/>


        <Button
            android:id="@+id/buttonReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="Reset Game"
            android:textSize="22dp"/>


    </LinearLayout>




</LinearLayout>